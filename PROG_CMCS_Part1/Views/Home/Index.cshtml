@{
    ViewData["Title"] = "Login"; // Set page title
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        /* Page and background styling */
        body, html {
            height: 100%;
            margin: 0;
            background: linear-gradient(135deg, #003366, #00509e);
            color: #fff;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        /* Container to center content */
        .page-container {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        /* Heading styling */
        .welcome-heading {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 30px;
            text-align: center;
            letter-spacing: 1px;
        }

        /* Login box styling */
        .login-box {
            background: rgba(255, 255, 255, 0.15);
            padding: 40px;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 350px;
        }

            .login-box p {
                font-size: 1.1rem;
                margin-bottom: 20px;
            }

        /* Login button styling */
        .btn-login {
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 30px;
            font-weight: bold;
        }

            .btn-login:hover {
                opacity: 0.9;
            }
    </style>
</head>

<body>
    <div class="page-container">

        <!-- Welcome heading -->
        <h1 class="welcome-heading">Welcome to the Contract Monthly Claim System</h1>

        <!-- Login box -->
        <div class="login-box">
            <p>Please login to begin.</p>

            <!-- Link to login page -->
            <a class="btn btn-light btn-login" href="/Account/Login">
                Login
            </a>
        </div>
    </div>
</body>
</html>
