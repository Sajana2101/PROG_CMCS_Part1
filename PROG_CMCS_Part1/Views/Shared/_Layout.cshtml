<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROG_CMCS_Part1</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG_CMCS_Part1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PROG_CMCS_Part1</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <ul class="navbar-nav flex-grow-1">
                            @{
                                var controller = ViewContext.RouteData.Values["controller"]?.ToString();

                                if (controller == "Lecturer")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Lecturer" asp-action="Dashboard">Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Lecturer" asp-action="SubmitClaim">Submit Claim</a>
                                    </li>
                                }
                                else if (controller == "Coordinator")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Coordinator" asp-action="Dashboard">Dashboard</a>
                                    </li>
                                }
                                else if (controller == "Manager")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Manager" asp-action="Dashboard">Dashboard</a>
                                    </li>
                                }
                            }
                        </ul>

                        <div class="d-flex align-items-center">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Account" asp-action="Logout"
                                   style="color:white; text-decoration:none; padding:6px 12px; border-radius:6px; background-color:#C0392B; transition:background-color 0.3s;"
                                   onmouseover="this.style.backgroundColor='#992222'" onmouseout="this.style.backgroundColor='#C0392B'">
                                    Logout
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login"
                                   style="color:white; text-decoration:none; padding:6px 12px; border-radius:6px; background-color:#2980B9; transition:background-color 0.3s;"
                                   onmouseover="this.style.backgroundColor='#1f5f85'" onmouseout="this.style.backgroundColor='#2980B9'">
                                    Login
                                </a>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PROG_CMCS_Part1 - <a asp-area="" asp-controller="Home" asp-action=""></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
