@{
    ViewData["Title"] = "Submit Claim";
}
<h2>Submit Claim</h2>
<!-- Submit claim form -->
<form>
    <!-- Month input -->
    <div class="mb-3 col-md-4">
        <label>Month:</label>
        <input type="text" name="Month" class="form-control" />
    </div>
    <!-- Hours worked input -->
    <div class="mb-3 col-md-4">
        <label>Hours Worked:</label>
        <input type="number" name="Hours" class="form-control" />
    </div>
    <!-- Supporting document upload -->
    <div class="mb-3 col-md-4">
        <label>Upload Supporting Document:</label>
        <input type="file" name="SupportingDoc" class="form-control" />
        <small class="form-text text-muted">Maximum file size: 5MB</small>
        <small class="form-text text-muted">Only PDF, Word, and Notepad Documents Accepted</small>
    </div>
    <!-- Buttons -->
    <div class="mt-3">
        <button type="button" class="btn btn-success me-2">Submit</button>
        <a class="btn btn-secondary" href="/Lecturer/Dashboard">Back to Dashboard</a>
    </div>
</form>

