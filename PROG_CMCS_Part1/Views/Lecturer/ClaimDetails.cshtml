@model dynamic
@{
    ViewData["Title"] = "Claim Details";
}

<h2>Claim Details</h2>

<div>
    <!-- Claim information -->
    <p><strong>Claim ID:</strong> @Model.ClaimId</p>
    <p><strong>Lecturer Name:</strong> @Model.LecturerName</p>
    <p><strong>Month:</strong> @Model.Month</p>
    <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
    <p><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Finalised By:</strong> @Model.FinalisedBy</p>
    <p><strong>Supporting Documents:</strong> @Model.SupportingDocuments</p>
</div>
<!-- Back button -->
<a class="btn btn-secondary" href="/Lecturer/Dashboard">Back to My Claims</a>
