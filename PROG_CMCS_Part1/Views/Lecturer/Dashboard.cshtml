@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<nav>
    <ul class="nav nav-pills">
        
        <li class="nav-item">
            <a class="nav-link" href="/Lecturer/SubmitClaim">Submit Claim</a>
           
        </li>
    </ul>
</nav>

<h2>My Submitted Claims</h2>



<form method="get" asp-action="Dashboard">
    <label>Filter by Status: </label>
    <select name="statusFilter" onchange="this.form.submit()">
        <option value="All">All</option>
        <option value="Pending Verification">Pending Verification</option>
        <option value="Verified – Pending Approval">Verified – Pending Approval</option>
        <option value="Approved">Approved</option>
        <option value="Rejected">Rejected</option>
    </select>
    <button type="submit" name="statusFilter" value="All" class="btn btn-secondary">Reset</button>
</form>



<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Month</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.Month</td>
                <td>@claim.Status</td>
                <td><a class="btn btn-info" href="/Lecturer/ClaimDetails/@claim.ClaimId">Details</a></td>
            </tr>
        }
    </tbody>

</table>
