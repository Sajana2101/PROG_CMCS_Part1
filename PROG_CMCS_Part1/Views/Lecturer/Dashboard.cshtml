@{
    ViewData["Title"] = "Lecturer Dashboard";
}


<h2>My Submitted Claims</h2>

<!-- Filter form -->

<form method="get" asp-action="Dashboard">
    <label>Filter by Status: </label>
    <select name="statusFilter" onchange="this.form.submit()">
        <option value="All">All</option>
        <option value="Pending Verification">Pending Verification</option>
        <option value="Verified – Pending Approval">Verified – Pending Approval</option>
        <option value="Approved">Approved</option>
        <option value="Rejected">Rejected</option>
    </select>
    <button type="submit" name="statusFilter" value="All" class="btn btn-secondary">Reset</button>
</form>
<!-- Assign CSS class based on claim status  -->
@functions {
    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",                     
            "Rejected" => "bg-danger",                      
            "Pending Verification" => "bg-light text-dark", 
            "Verified – Pending Approval" => "bg-warning text-dark", 
            _ => "bg-secondary text-white"                  
        };
    }
}

<!-- Claims table -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Month</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <!-- Claim data -->
                <td>@claim.ClaimId</td>
                <td>@claim.Month</td>
                <td class="@GetStatusClass(claim.Status) text-center">@claim.Status</td>
                <!-- Details button -->
                <td><a class="btn btn-info" href="/Lecturer/ClaimDetails/@claim.ClaimId">Details</a></td>
            </tr>
        }
    </tbody>

</table>
