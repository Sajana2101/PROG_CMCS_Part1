@model IEnumerable<PROG_CMCS_Part1.Models.Claim>

@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<h2>My Submitted Claims</h2>
<!-- Filter Form Section Allows lecturers to filter claims by status dynamically -->
<form method="get" asp-action="Dashboard" class="mb-3">
    <label>Filter by Status:</label>
    <!-- Dropdown for selecting claim status -->
    <select name="statusFilter" onchange="this.form.submit()" class="form-select w-auto d-inline-block">
        <option value="All">All</option>
        <option value="Pending">Pending</option>
        <option value="Verified">Verified</option>
        <option value="Approved">Approved</option>
        <option value="Rejected">Rejected</option>
    </select>
    <button type="submit" name="statusFilter" value="All" class="btn btn-secondary ms-2">Reset</button>
</form>

@functions {
    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success text-white",
            "Rejected" => "bg-danger text-white",
            "Pending Verification" => "bg-secondary text-white",
            "Verified – Pending Approval" => "bg-warning text-dark",
            _ => "bg-light text-dark"
        };
    }
}
<!-- Claims Table Section Displays all submitted claims with key details -->


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Month</th>

            <th>Module Code</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Date Submitted</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Month</td>

                <td>@claim.ModuleCode</td>
                <td>R @claim.TotalAmount</td>
                <td class="@GetStatusClass(claim.Status) text-center">@claim.Status</td>
                <td>@claim.DateSubmitted.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="ClaimDetails" asp-route-id="@claim.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-success" asp-action="SubmitClaim">+ Submit New Claim</a>
</div>
