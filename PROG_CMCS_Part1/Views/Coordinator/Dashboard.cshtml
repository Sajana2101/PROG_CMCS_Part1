@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<h2>Claims to Review</h2>
<!-- Filter form -->

<form method="get" asp-action="Dashboard">
    <label>Filter by Status: </label>
    <select name="statusFilter" onchange="this.form.submit()">
        <option value="All">All</option>
        <option value="Pending Verification">Pending Verification</option>
        <option value="Verified – Pending Approval">Verified – Pending Approval</option>
        <option value="Approved">Approved</option>
        <option value="Rejected">Rejected</option>
    </select>
    <button type="submit" name="statusFilter" value="All" class="btn btn-secondary">Reset</button>
</form>
<!-- Status colours -->
@functions {
    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Pending Verification" => "bg-light text-dark",
            "Verified – Pending Approval" => "bg-warning text-dark",
            _ => "bg-secondary text-white"
        };
    }
}
<!-- Claims table -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Month</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.Month</td>
                <td class="@GetStatusClass(claim.Status) text-center">@claim.Status</td>

                <td>
                   
                    @if (claim.Status == "Submitted" || claim.Status == "Pending Verification")
                    {
                        <a class="btn btn-success" href="#">Verify</a>
                        <a class="btn btn-primary" href="#">Approve</a>
                        <a class="btn btn-danger" href="#">Reject</a>
                        <a class="btn btn-info" href="/Coordinator/ClaimDetails/@claim.ClaimId">Details</a>
                    }
                    else if (claim.Status == "Verified – Pending Approval")
                    {
                        <a class="btn btn-primary" href="#">Approve</a>
                        <a class="btn btn-danger" href="#">Reject</a>
                        <a class="btn btn-info" href="/Coordinator/ClaimDetails/@claim.ClaimId">Details</a>
                    }
                    else if (claim.Status == "Approved" || claim.Status == "Rejected")
                    {
                        <a class="btn btn-info" href="/Coordinator/ClaimDetails/@claim.ClaimId">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
