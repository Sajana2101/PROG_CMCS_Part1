@model IEnumerable<PROG_CMCS_Part1.Models.Claim>

@{
    ViewData["Title"] = "Coordinator Dashboard";
}
<!-- Display Claims submitted by lecturers-->
<h2>Claims to Review</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Coordinator</th>
            <th>Supporting Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Colour coordinating status changes -->
        @functions {
            private string GetStatusClass(string status)
            {
                return status switch
                {
                    "Approved" => "bg-success text-white",
                    "Rejected" => "bg-danger text-white",
                    "Pending Verification" => "bg-secondary text-white",
                    "Verified – Pending Approval" => "bg-warning text-dark",
                    _ => "bg-light text-dark"
                };
            }
        }

        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.Month</td>
                <td>R @claim.TotalAmount</td>

               
                <td class="@GetStatusClass(claim.Status)">
                    @claim.Status
                </td>

                <td>@claim.CoordinatorName</td>

               
                <td>
                    @if (claim.EncryptedDocuments != null && claim.EncryptedDocuments.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @for (int i = 0; i < claim.EncryptedDocuments.Count; i++)
                            {
                                var encryptedFile = claim.EncryptedDocuments[i];
                                var originalName = claim.OriginalDocuments.Count > i
                                ? claim.OriginalDocuments[i]
                                : encryptedFile;

                                <li>
                                    <a asp-action="DownloadFile"
                                       asp-controller="Coordinator"
                                       asp-route-claimId="@claim.Id"
                                       asp-route-file="@encryptedFile"
                                       class="btn btn-sm btn-outline-primary mb-1">
                                        @originalName
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No document</span>
                    }
                </td>

                
                <td>
                    @if (claim.Status == "Pending" || claim.Status == "Pending Verification")
                    {
                        <!--
                            Added "Enter your name" field to ensure the coordinator intentionally verifies or rejects the claim,
                            preventing accidental status changes.
                        -->
                        <form asp-action="UpdateStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <input type="hidden" name="status" value="Verified – Pending Approval" />
                            <input type="text" name="coordinatorName" placeholder="Your Name" required class="form-control form-control-sm mb-1" />
                            <button type="submit" class="btn btn-success btn-sm">Verify</button>
                        </form>
                        <form asp-action="UpdateStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <input type="hidden" name="status" value="Rejected" />
                            <input type="text" name="coordinatorName" placeholder="Your Name" required class="form-control form-control-sm mb-1" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-info btn-sm" asp-action="ClaimDetails" asp-route-id="@claim.Id">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
