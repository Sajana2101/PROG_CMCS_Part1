@model IEnumerable<PROG_CMCS_Part1.Models.Claim>
@using PROG_CMCS_Part1.Models

@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<h2>Coordinator Dashboard</h2>
<!-- Claims table -->
<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Module</th>
            <th>Month</th>
            <th>Total Hours</th>
            <th>Total Amount</th>
            <th>Date Submitted</th>
            <th>Status</th>
            <th>Documents</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <!-- Display claim properties -->
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.ModuleCode</td>
                <td>@claim.Month</td>
                <td>@claim.HoursWorked</td>
                <td>R @claim.TotalAmount</td>
                <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                <td>@claim.Status</td>

                <td>
                    <!-- Documents download links -->
                    @if (claim.EncryptedDocuments != null && claim.EncryptedDocuments.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @for (int i = 0; i < claim.EncryptedDocuments.Count; i++)
                            {
                                var enc = claim.EncryptedDocuments[i];
                                var original = claim.OriginalDocuments.Count > i ? claim.OriginalDocuments[i] : enc;

                                <li>
                                    <a asp-controller="Coordinator"
                                       asp-action="DownloadFile"
                                       asp-route-claimId="@claim.Id"
                                       asp-route-file="@enc"
                                       class="btn btn-sm btn-outline-primary mb-1">
                                        @original
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No documents</span>
                    }
                </td>
                <!-- Actions for pending claims or details for others -->
                <td>
                    @if (claim.Status == ClaimStatus.Pending)
                    {
                        <!-- Verify claim button -->
                        <form asp-controller="Coordinator" asp-action="UpdateStatus" method="post" class="d-inline-block">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@claim.Id" />
                            <input type="hidden" name="status" value="@ClaimStatus.Verified" />
                            <button type="submit" class="btn btn-success btn-sm">Verify</button>
                        </form>
                        <!-- Reject claim form -->
                        <form asp-controller="Coordinator" asp-action="UpdateStatus" method="post" class="d-inline-block ms-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@claim.Id" />
                            <input type="hidden" name="status" value="@ClaimStatus.Rejected" />
                            <input type="text" name="comment" placeholder="Rejection reason (required)" required class="form-control form-control-sm mb-1" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                    <!-- View claim details -->
                    else
                    {
                        <a asp-action="ClaimDetails" asp-route-id="@claim.Id" class="btn btn-info btn-sm">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

