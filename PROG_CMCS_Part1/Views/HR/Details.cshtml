@model PROG_CMCS_Part1.Models.HRManagement

@{
    ViewData["Title"] = "HR User Details";
}
<!-- View Details -->
<div class="container mt-5">
    <div class="card shadow-lg p-4" style="border-radius: 12px; max-width: 700px; margin: auto;">

        <h3 class="text-center mb-4" style="font-weight: 600;">
            <i class="bi bi-person-badge"></i> HR User Details
        </h3>

        <hr />

        <dl class="row mt-3">
            <dt class="col-sm-4 fw-bold text-secondary">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Hourly Rate</dt>
            <dd class="col-sm-8">R @Model.HourlyRate</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Max Hours</dt>
            <dd class="col-sm-8">@Model.MaxHours</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Password</dt>
            <dd class="col-sm-8">@Model.Password</dd>

            <dt class="col-sm-4 fw-bold text-secondary">Role</dt>
            <dd class="col-sm-8">@Model.Role</dd>
        </dl>

        <div class="mt-4 d-flex justify-content-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 me-3">
                Edit
            </a>
            <!-- Back Button -->
            <a asp-action="Index" class="btn btn-secondary px-4">
                Back to List
            </a>
        </div>

    </div>
</div>
