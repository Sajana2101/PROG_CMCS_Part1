@model PROG_CMCS_Part1.Models.HRManagement

@{
    ViewData["Title"] = "HR User Details";
}

<h2>HR User Details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>

    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Hourly Rate</dt>
    <dd class="col-sm-10">R @Model.HourlyRate</dd>

    <dt class="col-sm-2">Max Hours</dt>
    <dd class="col-sm-10">@Model.MaxHours</dd>

    <dt class="col-sm-2">Password</dt>
    <dd class="col-sm-10">@Model.Password</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<div class="mb-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
