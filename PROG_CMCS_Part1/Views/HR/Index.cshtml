@model IEnumerable<PROG_CMCS_Part1.Models.HRManagement>

@{
    ViewData["Title"] = "HR Users";
}

<h2>HR Users</h2>
<hr />

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>

    <a asp-controller="HRReports"
       asp-action="Index"
       class="btn btn-success">
        <i class="bi bi-file-earmark-text-fill me-1"></i>
        Generate Claims Report
    </a>
</div>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Hourly Rate</th>
            <th>Max Hours</th>
            <th>Password</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>R @item.HourlyRate</td>
                <td>@item.MaxHours</td>
                <td>@item.Password</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
