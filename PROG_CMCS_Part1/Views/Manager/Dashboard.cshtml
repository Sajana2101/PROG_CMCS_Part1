@{
    ViewData["Title"] = "Manager Dashboard";
}
<h2>Manager Dashboard</h2>

<p>Verified Claims</p>
<table class="table table-bordered">
    <tr>
        <th>Claim ID</th>
        <th>Month</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.Month</td>
                <td>@claim.Status</td>
                <td>
                    @if (claim.Status == "Submitted" || claim.Status == "Pending Verification")
                    {
                        <a class="btn btn-success" href="#">Verify</a>
                        <a class="btn btn-primary" href="#">Approve</a>
                        <a class="btn btn-danger" href="#">Reject</a>
                        <a class="btn btn-info" href="/Manager/ClaimDetails/@claim.ClaimId">Details</a>
                    }
                    else if (claim.Status == "Verified – Pending Approval")
                    {
                        <a class="btn btn-primary" href="#">Approve</a>
                        <a class="btn btn-danger" href="#">Reject</a>
                        <a class="btn btn-info" href="/Manager/ClaimDetails/@claim.ClaimId">Details</a>
                    }
                    else if (claim.Status == "Approved" || claim.Status == "Rejected")
                    {
                        <a class="btn btn-info" href="/Manager/ClaimDetails/@claim.ClaimId">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
