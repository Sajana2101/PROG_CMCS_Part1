@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 380px; border-radius: 12px;">
        <h3 class="text-center mb-4" style="font-weight: 600;">Login</h3>

        <form method="post" asp-action="Login">

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" name="email" class="form-control shadow-sm" placeholder="Enter your email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control shadow-sm" placeholder="Enter your password" />
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2" style="padding: 10px; border-radius: 30px; font-weight: 600;">
                Login
            </button>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3 text-center">
                    @ViewBag.Error
                </div>
            }
        </form>
    </div>
</div>
